<div>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <h1>Login Form</h1>
              <div>
                <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
              </div>
              <div>
                <%= f.password_field :password, placeholder:"Senha", class:"form-control"  %>
              </div>
              <div>
                <%= f.password_field :password, placeholder:"Confirmação de Senha", class:"form-control"  %>
              </div>
              <div>
                <%= f.submit "Log in", class:"btn btn-default submit", style:"float: none; margin-left: 0px;" %>
              </div>

              <div class="clearfix"></div>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="separator">
              </div>
            <% end %>
          </section>
        </div>
      </div>
    </div>
